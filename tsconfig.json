{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@renderer/lib/*": ["packages/renderer/src/lib/*"],
      "@renderer/features/*": ["packages/renderer/src/features/*"],
      "@main/*": ["packages/main/src/*"]
    }
  },
  // "include": ["packages/**/*"]
}
